{
  "name": "tweetnacl",
  "version": "1.0.3",
  "description": "Port of TweetNaCl cryptographic library to JavaScript",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/typings/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/typings/index.d.ts"
    },
    "./fast/lowlevel": {
      "import": "./dist/esm/fast/lowlevel/index.js",
      "require": "./dist/cjs/fast/lowlevel/index.js",
      "types": "./dist/typings/fast/lowlevel/index.d.ts"
    },
    "./fast/*": {
      "import": "./dist/esm/fast/*.js",
      "require": "./dist/cjs/fast/*.js",
      "types": "./dist/typings/fast/*.d.ts"
    },
    "./notfast/lowlevel": {
      "import": "./dist/esm/notfast/lowlevel/index.js",
      "require": "./dist/cjs/notfast/lowlevel/index.js",
      "types": "./dist/typings/notfast/lowlevel/index.d.ts"
    },
    "./notfast/*": {
      "import": "./dist/esm/notfast/*.js",
      "require": "./dist/cjs/notfast/*.js",
      "types": "./dist/typings/notfast/*.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "dist/typings/index.d.ts"
      ],
      "fast/lowlevel": [
        "dist/typings/fast/lowlevel/index.d.ts"
      ],
      "fast/*": [
        "dist/typings/fast/*.d.ts"
      ],
      "notfast/lowlevel": [
        "dist/typings/notfast/lowlevel/index.d.ts"
      ],
      "notfast/*": [
        "dist/typings/notfast/*.d.ts"
      ]
    }
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "uglifyjs nacl.js -c -m -o nacl.min.js && uglifyjs nacl-fast.js -c -m -o nacl-fast.min.js",
    "test-node": "tape test/*.js | faucet",
    "test-node-all": "make -C test/c && tape test/*.js test/c/*.js | faucet",
    "build-test-browser": "browserify test/browser/init.js test/*.js | uglifyjs -c -m -o test/browser/_bundle.js 2>/dev/null && browserify test/browser/init.js test/*.quick.js | uglifyjs -c -m -o test/browser/_bundle-quick.js 2>/dev/null",
    "test": "npm run test-node-all",
    "bench": "node test/benchmark/bench.js",
    "lint": "eslint nacl.js nacl-fast.js test/*.js test/benchmark/*.js",
    "clean:dist": "rimraf dist",
    "clean:dist-test": "rimraf dist-test",
    "mkdir:dist-test": "make-dir dist-test/data",
    "build:typings": "tsc --project tsconfig.typings.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:umd:fast": "rollup --format umd --name nacl --input src/umd-fast.js --file dist/umd/nacl-fast.js --sourcemap",
    "build:umd:min:fast": "uglifyjs --compress --mangle --source-map --comments -o dist/umd/nacl-fast.min.js -- dist/umd/nacl-fast.js",
    "build:umd:notfast": "rollup --format umd --name nacl --input src/umd-notfast.js --file dist/umd/nacl.js --sourcemap",
    "build:umd:min:notfast": "uglifyjs --compress --mangle --source-map --comments -o dist/umd/nacl.min.js -- dist/umd/nacl.js",
    "build:distpkgjson": "node src/dist-package-jsons.js",
    "build:dist": "run-s clean:dist build:typings build:esm build:cjs build:distpkgjson build:umd:fast build:umd:min:fast build:umd:notfast build:umd:min:notfast",
    "build:test:data:gen:deps": "go get -u golang.org/x/crypto",
    "build:test:data:gen": "GO111MODULE=off go run src-test/generate-test-data.go",
    "build:test:data": "run-s build:test:data:gen:deps build:test:data:gen",
    "build:test:scripts:common": "uglifyjs src-test/data/*.js dist-test/data/*.js src-test/common/*.js -o dist-test/common.js",
    "build:test:scripts:node:fast": "uglifyjs src-test/test-setup-node-fast.js dist-test/common.js -o dist-test/test-node-fast.js",
    "build:test:scripts:node:notfast": "uglifyjs src-test/test-setup-node-notfast.js dist-test/common.js -o dist-test/test-node-notfast.js",
    "build:test:scripts": "run-s build:test:scripts:common build:test:scripts:node:notfast build:test:scripts:node:fast",
    "build:test": "run-s clean:dist-test mkdir:dist-test build:test:data build:test:scripts",
    "test:node:fast": "mocha dist-test/test-node-fast.js --timeout 0",
    "test:node:notfast": "mocha dist-test/test-node-notfast.js --timeout 0",
    "test:node:all": "run-s test:node:fast test:node:notfast"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dchest/tweetnacl-js.git"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "curve25519",
    "ed25519",
    "encrypt",
    "hash",
    "key",
    "nacl",
    "poly1305",
    "public",
    "salsa20",
    "signatures"
  ],
  "author": "TweetNaCl-js contributors",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/dchest/tweetnacl-js/issues"
  },
  "homepage": "https://tweetnacl.js.org",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "browserify": "^16.2.3",
    "chai": "^4.3.6",
    "eslint": "^6.8.0",
    "faucet": "^0.0.1",
    "make-dir-cli": "^3.0.0",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.13.0",
    "tweetnacl-util": "^0.15.0",
    "typescript": "^4.6.3",
    "uglify-js": "^3.15.3"
  },
  "browser": {
    "buffer": false,
    "crypto": false
  }
}